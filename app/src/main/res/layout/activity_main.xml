<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:outlineAmbientShadowColor="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp"
        android:outlineAmbientShadowColor="@android:color/background_light">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="Player:"
             android:textStyle="bold"
             android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name of the player 1"
            android:inputType="text"
            android:id="@+id/text5"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name of the player 2"
            android:inputType="text"
            android:id="@+id/text6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            style="@android:style/Animation"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:text="Runs scored"
           android:layout_margin="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/button1"
                android:text="-1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:id="@+id/text1"
                android:textColor="@android:color/black"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/button2"
                android:layout_marginRight="5dp"
                android:text="+1"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/button3"
                android:layout_marginLeft="50dp"
                android:text="-2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:id="@+id/text2"
                android:textColor="@android:color/black"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/button4"
                android:text="+2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/button5"
                android:text="-4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:id="@+id/text3"
                android:textColor="@android:color/black"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/button6"
                android:text="+4"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="54dp"
                android:id="@+id/button7"
                android:layout_marginLeft="50dp"
                android:text="-6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:id="@+id/text4"
                android:textColor="@android:color/black"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/button8"
                android:text="+6"/>
        </LinearLayout>
                   <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    style="@android:style/Animation"
                    android:layout_width="120dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="wide :"
                    android:textColor="@android:color/black"
                    android:textSize="30dp"
                    android:textStyle="italic" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="54dp"
                    android:id="@+id/button15"
                    android:layout_marginLeft="50dp"
                    android:text="-1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:id="@+id/text8"
                    android:textColor="@android:color/black"
                    />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:id="@+id/button16"
                    android:text="+1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@android:style/Animation"
                android:layout_width="120dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="no ball"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="italic" />
            <Button
                android:layout_width="40dp"
                android:layout_height="54dp"
                android:id="@+id/button17"
                android:layout_marginLeft="50dp"
                android:text="-1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:id="@+id/text9"
                android:textColor="@android:color/black"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/button18"
                android:text="+1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="wickets!!"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@android:color/holo_red_dark"
                android:textAppearance="@android:color/black"
                android:id="@+id/button11"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:id="@+id/text10"
                android:textSize="40sp"
                android:textAlignment="center"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:text="TOTAL  SCORE :"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/button12"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TOTAL RUNS"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="26sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="runs"
            android:id="@+id/res"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BOUNDARIES"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="26sp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="boundaries"
        android:id="@+id/fn"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="24sp"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="EXTRAS"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="26sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="extras"
            android:id="@+id/ext"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WICKETS"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="26sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wickets"
            android:id="@+id/wic"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="24sp"/>
    </LinearLayout>

</ScrollView>